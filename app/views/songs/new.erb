<h1>Add a new Song!</h1>

<form  action="/songs/new" method="post">

  <label for="name">Name:</label>
  <input type="text" id="name" name="song[name]">

  <br></br>

  <label for="Artist Name">Artist:</label>
  <input type="text" id="Artist Name" name="song[artist][name]">
  <br>
  <h3>Pick genre(s):</h3>
  <% Genre.all.each do |genre| %>
  <label for="<%= genre.name %>"> <%= genre.name %> </label>
  <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>">
  <br>
<% end %>

<input type="submit" name="submit" value="Create">

</form>
